{
  "builders": [
    {
      "type": "hyperv-iso",
      "vm_name": "CentOS74",
      "temp_path": ".",
      "iso_urls": [
        "{{ user `iso_disk` }}",
        "{{ user `iso_url`}}"
      ],
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "disk_size": 81920,
      "communicator": "ssh",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_timeout" : "4h",
      "shutdown_timeout": "30m",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ram_size": 4096,
      "enable_mac_spoofing": "true",
      "enable_dynamic_memory": "false",
      "enable_virtualization_extensions": "true",
      "cpu": 2,
      "generation": 2,
      "switch_name": "{{user `switch_name`}}",
      "vlan_id": "{{user `vlan_id`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "c  setparams 'kickstart' <enter> linuxefi /images/pxeboot/vmlinuz inst.stage2=hd:LABEL=CentOS\\x207\\x20x\\86_64 inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter> initrdefi /images/pxeboot/initrd.img<enter> boot<enter>"
      ],
      "guest_additions_mode": "disable",
      "enable_secure_boot": false,
      "output_directory": "CentOS74"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ansible.sh"
    }
  ],
  "variables": {
    "iso_disk": "CentOS-7-x86_64-DVD-1708.iso",
    "iso_url": "http://mirror.cogentco.com/pub/linux/centos/7.4.1708/isos/x86_64/CentOS-7-x86_64-DVD-1708.iso",
    "iso_checksum_type": "sha256",
    "iso_checksum": "ec7500d4b006702af6af023b1f8f1b890b6c7ee54400bb98cef968b883cd6546",
    "switch_name": "LANBridge",
    "vlan_id": ""
  }
}
